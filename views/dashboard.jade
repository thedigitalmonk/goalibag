extends layout.jade
block content
    if message
      p(class="bg bg-success")!=message
    h1 Update Database
    .row
      .col-md-8
        .col-md-6
          p Before uploading delete all listings using this link
          if count
            p Total no. of listings: #{count}
          p
            a(href="/deleteAllListings" class="btn btn-default") Delete listings
        .col-md-6
          form(action = '/upload', method = 'post' enctype='multipart/form-data')
            input(type="file" name="database" required)
            input(type='submit' class='btn btn-primary')
